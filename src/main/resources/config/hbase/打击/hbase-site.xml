<configuration>
	<property>
		<name>hbase.rootdir</name>
		<!-- <value>file:///E:/hbase-1.3.1/tmp/hbase/root</value> -->
		<!-- hbase在hdfs里的目录 -->
		<value>hdfs://linux000:9000/hbase</value>
	</property>	 

	<!-- hbase提供的服务地址-->
   <!-- <name>hbase.master</name> -->
        <!-- <value>localhost:6000</value> -->
   <!-- </property> -->
   <!-- <property> -->
        <!-- <name>hbase.master.maxclockskew</name> -->
        <!-- <value>180000</value> -->
   <!-- </property> -->
   
	<property>	 
		<name>hbase.tmp.dir</name>	 
		<value>/opt/module/hbase-1.3.1/tmp</value>	 
	</property>	 
	<property>
		<name>hbase.zookeeper.quorum</name>	 
		<value>linux000:2181</value>	 
	</property>	 
	<property>
		<!-- hbase在ZK上保存数据的目录 -->
		<name>hbase.zookeeper.property.dataDir</name>	 
		<value>/opt/module/hbase-1.3.1/zkData</value>	 
	</property>	 
	<property>	 
		<name>hbase.cluster.distributed</name>	 
		<value>false</value>	 
	</property>
	<property>
        <name>dfs.replication</name>
         <value>1</value>
   </property>
</configuration>

